<div class="relative z-10">
    <div id="add-item-form-modal" class="edit_item-form-modal absolute inset-x-1/4 w-fit mx-auto p-8 text-slate-700 dark:text-slate-200 bg-state-300 dark:bg-slate-700 {% if hidden %}hidden{% endif %}">
        {{ form_start(editItemForm) }}
            {{ form_row(editItemForm.name) }}
            {{ form_row(editItemForm.comment) }}

            <div>
                {{ form_label(editItemForm.quantity, 'Quantit√©', { 'label_attr': { 'class': 'inline-block' }}) }}
                <i class="help-activator inline-block" data-helper-id="item_quantity_help">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 5.25h.008v.008H12v-.008Z" />
                    </svg>
                </i>
            </div>
            <pre class="whitespace-pre-line">
                {{ form_help(editItemForm.quantity, { 'helper_id': 'item_quantity_help', 'help_attr': { 'class': 'hidden ' }}) }}</pre>
            <div>
                {{ form_errors(editItemForm.quantity) }}
                {{ form_widget(editItemForm.quantity) }}
            </div>

            {{ form_row(editItemForm.needed) }}
            <div class="{{ userCanEditProject ? 'hidden' : '' }}">
                {{ form_row(editItemForm.proposed) }}
            </div>
            <div class="{{ userCanEditProject ? '' : 'hidden' }}">
                {{ form_row(editItemForm.owned) }}
            </div>
            <div class="{{ userCanEditProject ? '' : 'hidden' }}">
                {{ form_row(editItemForm.validated) }}
            </div>
            {{ form_row(editItemForm.category) }}
            {{ form_row(editItemForm._token) }}
            <button type="submit" class="px-4 py-2 font-semibold text-sm rounded-full border border-slate-300 hover:border-amber-600 text-slate-300 active:text-amber-600">
                Enregistrer
            </button>
            <a href="{{ path('app_project_show', { 'slug': projectSlug }) }}" class="px-4 py-2 font-semibold text-sm rounded-full border border-slate-300 hover:border-amber-600 text-slate-300 active:text-amber-600" data-form="item" data-form-data="initialItem">
                Annuler
            </a>
        {{ form_end(editItemForm, {'render_rest': false}) }}
    </div>
</div>
