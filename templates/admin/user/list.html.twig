{% extends 'admin/base.html.twig' %}

{% block title %}Gestion utilisateurs{% endblock %}

{% block body %}
    <h2>Liste des utilisateurs</h2>

    {% include '_layouts/flash_message.html.twig' %}

    {{ form(userRoleForm) }}
    {% include '_layouts/confirmation-modal.html.twig' %}

    <table>
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Rôle</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                {% set biggestRole = user.roles|first|replace({'ROLE_': ''})|lower|capitalize %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ biggestRole }}</td>
                <td>
                    {% if (biggestRole == 'Contributor') %}
                        <div class="user-role-form-activator" data-name="{{ user.username }}" data-role-wanted="USER">Supprimer le rôle Contributor</div>
                    {% elseif biggestRole == 'User' %}
                        <div class="user-role-form-activator" data-name="{{ user.username }}" data-role-wanted="CONTRIBUTOR">Ajouter le rôle Contributor</div>
                    {% endif %}
            <tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('user-role-form-autofill') }}
{% endblock %}
