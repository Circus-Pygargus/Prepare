{% extends 'admin/base.html.twig' %}

{% block title %}Gestion utilisateurs{% endblock %}

{% block body %}
    <h2>Liste des utilisateurs</h2>

    {{ form(userRoleForm) }}

    <table>
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Rôle</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                {% set biggestRole = user.roles|first|replace({'ROLE_': ''})|lower|capitalize %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ biggestRole }}</td>
                <td>
                    {% if (biggestRole == 'Contributor') %}
                        <div>Supprimer le rôle Contributor</div>
                    {% elseif biggestRole == 'User' %}
                        <div>Ajouter le rôle Contributor</div>
                    {% endif %}
            <tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
