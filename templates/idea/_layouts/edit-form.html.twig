<div id="idea-form-modal" class="form-modal relative w-full h-dvh z-10 bg-slate-300 {% if hidden %}hidden{% endif %}" data-name="idea">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 overflow-auto p-8 text-slate-700  dark:text-slate-200 bg-state-300 dark:bg-slate-700">
        {{ form_start(editIdeaForm) }}
            {{ form_row(editIdeaForm.type) }}
            {{ form_row(editIdeaForm.name) }}
            {{ form_row(editIdeaForm.comment) }}
            <div>
                {{ form_label(editIdeaForm.quantity, 'Quantité', { 'label_attr': { 'class': 'inline-block' }}) }}
                <i class="help-activator inline-block" data-helper-id="idea_quantity_help">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 5.25h.008v.008H12v-.008Z" />
                    </svg>
                </i>
            </div>
            <pre class="whitespace-pre-line">
                {{ form_help(editIdeaForm.quantity, { 'helper_id': 'idea_quantity_help', 'help_attr': { 'class': 'hidden ' }}) }}</pre> {# Pas d'intentation de la balise, ça enlève un espace sous form_help ! #}
            <div>
                {{ form_errors(editIdeaForm.quantity) }}
                {{ form_widget(editIdeaForm.quantity) }}
            </div>

            {{ form_row(editIdeaForm.needed) }}
            <div class="{{ userCanEditProject ? 'hidden' : '' }}">
                {{ form_row(editIdeaForm.proposed) }}
            </div>
            <div class="{{ userCanEditProject ? '' : 'hidden' }}">
                {{ form_row(editIdeaForm.owned) }}
            </div>
            <div class="{{ userCanEditProject ? '' : 'hidden' }}">
                {{ form_row(editIdeaForm.validated) }}
            </div>
            {{ form_row(editIdeaForm.category) }}
            {{ form_row(editIdeaForm._token) }}
            <button type="submit" class="px-4 py-2 font-semibold text-sm rounded-full border border-slate-300 hover:border-amber-600 text-slate-300 active:text-amber-600">
                Enregistrer
            </button>
            <a href="{{ path('app_project_show', { 'slug': projectSlug }) }}" class="px-4 py-2 font-semibold text-sm rounded-full border border-slate-300 hover:border-amber-600 text-slate-300 active:text-amber-600" data-form="idea">
                Annuler
            </a>
        {{ form_end(editIdeaForm, {'render_rest': false}) }}
    </div>
</div>
